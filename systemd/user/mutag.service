[Unit]
Description=postprocess mail and news

# mutag changes mail database based on ~/mail
Requisite=initial-synced-mail.target
After=initial-synced-mail.target

After=offlineimap.service
After=rss2maildir.service
Conflicts=mu4e.service

[Service]
Type=oneshot
ExecStart=/usr/bin/mutag --index --silent
ExecStart=/usr/bin/mutag --autotag --modified --update --silent -q 'date:1m..now'
ExecStart=/usr/bin/mutag --index --silent
