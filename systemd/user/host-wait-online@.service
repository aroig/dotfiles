[Unit]
Description=wait until host %i is online

Requires=network-online.target
After=network-online.target

[Service]
Type=oneshot
RemainAfterExit=true
Slice=daemons.slice

ExecStart=/usr/bin/sh -c '                         \
    while true; do                                 \
        ping -q -c 1 %i 2>&1 > /dev/null && break; \
        sleep 10;                                  \
    done                                           \
'
