[Unit]
Description=X modmap
Documentation=man:xmodmap(1)

Requisite=xserver@%i.target
After=xserver@%i.target

After=xorg@%i.service vncserver@%i.service x11vnc@%i.service xephyr@%i.service
After=xinit@%i.service


[Service]
Type=oneshot
Environment=DISPLAY=:%i
ExecStart=/usr/bin/xmodmap %h/.config/systemd/conf/Xmodmap
