!! urxvt
!!---------------------------------

! font
urxvt.font: xft:terminal
urxvt.letterSpace: 0

! UI
urxvt.scrollBar: False
urxvt.cursorBlink: True
urxvt.cursorUnderline: True

! Perl extensions
urxvt.perl-lib: /home/abdo/.config/urxvt/
urxvt.perl-ext-common: clipboard,keyboard-select,matcher

! URL matcher
urxvt.url-launcher: xdg-open
urxvt.matcher.button: 1

! Clipboard stuff
urxvt.keysym.M-c:   perl:clipboard:copy
urxvt.keysym.M-v:   perl:clipboard:paste
urxvt.keysym.M-C-v: perl:clipboard:paste_escap
urxvt.keysym.M-Escape: perl:keyboard-select:activate

urxvt.copyCommand:  xsel -ib
urxvt.pasteCommand: xsel -ob

! Disabling annoying stuff
urxvt.iso14755:     false



!! emacs
!!---------------------------------
Emacs.toolBar: off
Emacs.verticalScrollBars: off
Emacs.menuBar: off
Emacs.foreground: #dcdccc
Emacs.background: #2f2f2f

