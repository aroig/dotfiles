[Unit]
Description=PulseAudio Sound System
Documentation=man:pulseaudio(1)
PartOf=audio.target

[Service]
Type=simple
# BusName=org.pulseaudio.Server
# ExecStart=/usr/bin/pulseaudio --start --daemonize --fail
# PIDFile=/run/user/%U/pulse/pid
ExecStart=/usr/bin/pulseaudio --fail
SuccessExitStatus=0 1
Restart=always
RestartSec=1

[Install]
WantedBy=audio.target
