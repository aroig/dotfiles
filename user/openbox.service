[Unit]
Description=openbox window manager

After=xorg.service vncserver.service compton.service
After=xrandr-single.service xrandr-mirror.service xrandr-dual.service

Requisite=graphical.target
After=graphical.target

Requires=tint2.service
Before=tint2.service

Requires=wm.target
PartOf=wm.target
Before=wm.target

PartOf=openbox.target

[Service]
Type=simple
SyslogIdentifier=openbox
Slice=wm.slice

ExecStart=/usr/bin/openbox
KillSignal=SIGINT
TimeoutSec=15
