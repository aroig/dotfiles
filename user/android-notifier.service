[Unit]
Description=Android Notifier
After=xorg.target
StopWhenUnneeded=true

Requires=xorg.target
Requires=dbus.socket

[Service]
Type=simple
EnvironmentFile=%h/.config/systemd/conf/xenvironment
ExecStart=/usr/bin/android-notifier
ExecStop=/usr/bin/android-notifier --stop

[Install]
WantedBy=desktop.target
