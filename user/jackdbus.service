[Unit]
Description=jack dbus service
Documentation=man:jack(1)

After=pulseaudio.service

Requires=audio.slice
After=audio.slice

StopWhenUnneeded=true

[Service]
Type=dbus
BusName=org.jackaudio.service

# realtime scheduling
CPUSchedulingPolicy=rr
CPUSchedulingPriority=60

# we use jackdbus
ExecStart=/usr/bin/jackdbus auto
ExecStop=/usr/bin/jack_control exit

Slice=audio.slice
