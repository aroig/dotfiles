[Unit]
Description=Redshift
After=xorg@%I.service
After=compton@%I.service
After=xrandr@%I.service
StopWhenUnneeded=true

Requires=xorg@%I.service

[Service]
Type=simple
EnvironmentFile=%h/.config/systemd/conf/xenvironment
Environment=DISPLAY=:%I
ExecStart=/usr/bin/redshift -l 41.383:2.183 -t 6500:5500 -g 1.0 -m randr

[Install]
WantedBy=xorg.target
