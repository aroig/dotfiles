[Unit]
Description=gpg agent local proxy

# Requires=gpg-agent.socket
# After=gpg-agent.socket

Requires=gpg-agent.service
After=gpg-agent.service

[Service]
Type=simple
SyslogIdentifier=gpg-agent-proxy
ExecStart=/usr/bin/socat UNIX-LISTEN:%t/gpg-agent/S.gpg-agent,unlink-early,mode=755 UNIX-CONNECT:%h/.gnupg/S.gpg-agent
# ExecStart=/usr/lib/systemd/systemd-socket-proxyd %h/.gnupg/S.gpg-agent
