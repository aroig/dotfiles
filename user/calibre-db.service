[Unit]
Description=unlock calibre database

StopWhenUnneeded=true
ConditionPathExists=/home/%u/lib

Requisite=sync-hi.service
After=sync-hi.service

[Service]
Type=oneshot
RemainAfterExit=true
SyslogIdentifier=calibre-db

ExecStart=/usr/bin/true
ExecStop=/usr/bin/systemctl --user start commit-calibre.service
