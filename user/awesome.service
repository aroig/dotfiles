
[Unit]
Description=The Awesome Window Manager
After=xorg.target
Requires=xorg.target
Requires=dbus.socket

[Service]
Type=simple
EnvironmentFile=%h/.config/systemd/conf/xenvironment
# ExecStart=/usr/bin/awesome
ExecStart=/bin/bash -login -c "%h/.config/systemd/scripts/wm-launch awesome start"
ExecStop=/bin/bash -c "%h/.config/systemd/scripts/wm-launch awesome stop"

[Install]
WantedBy=awesome.target
