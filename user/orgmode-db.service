[Unit]
Description=orgmode database

StopWhenUnneeded=true
ConditionPathExists=/home/%u/work/wiki

Requisite=sync-hi.service
After=sync-hi.service

[Service]
Type=oneshot
RemainAfterExit=true

SyslogIdentifier=orgmode-db
ExecStart=/usr/bin/true
ExecStop=/usr/bin/systemctl --user start commit-orgmode.service


