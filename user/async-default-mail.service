[Unit]
Description=sync mail to default host

Requires=mount-priv.service
After=mount-priv.service

Requires=async-default-mounted.service
After=async-default-mounted.service
After=async-default-base.service

[Service]
Type=oneshot
SyslogIdentifier=async-mail
ExecStart=/usr/bin/async -b sync --terse default -d mail