[Unit]
Description=Calibre
After=awesome.service
Requires=awesome.service
Requires=dbus.socket

[Service]
Type=simple
EnvironmentFile=%h/.config/systemd/conf/xenvironment
ExecStart=/usr/bin/calibre --start-in-tray --no-update-check
ExecStop=/usr/bin/calibre --shutdown-running-calibre

[Install]
WantedBy=awesome.target
