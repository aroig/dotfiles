[Unit]
Description=gpg agent remote proxy

Requires=gpg-agent-forward-proxy.socket
After=gpg-agent-forward-proxy.socket

Requires=gpg-agent.service
After=gpg-agent.service

[Service]
Type=simple
SyslogIdentifier=gpg-agent-proxy
ExecStart=/usr/lib/systemd/systemd-socket-proxyd %h/.gnupg/S.gpg-agent
# ExecStart=/usr/bin/socat TCP-LISTEN:11000,bind=127.0.0.1 UNIX-CONNECT:%h/.gnupg/S.gpg-agent


