[Unit]
Description=x11vnc server at display %i

Requisite=xorg@%i.service
After=xorg@%i.service

[Service]
Type=forking

# TODO: when I get a vncviewer that supports unix sockets, use this
#    -unixsockonly %t/x11vnc/x11vnc.socket
#
# ExecStartPre=/usr/bin/mkdir -p %t/x11vnc

ExecStart=/usr/bin/x11vnc -nopw -forever -ncache 10 -display :%i -rfbport 5900 -bg


