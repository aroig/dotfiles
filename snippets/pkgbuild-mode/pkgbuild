# -*- coding: utf-8 -*-
# name: full pkgbuild
# contributor: Abd√≥ Roig-Maranges <abdo.roig@gmail.com>
# key: pkgbuild
# --
# Maintainer: `abdo-name-and-mail`
pkgname=${1:name}
pkgver=${2:version}
pkgrel=1
pkgdesc=""
arch=()
url=""
license=('GPL')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=()
noextract=()
md5sums=()

build() {
  cd "$srcdir/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="$pkgdir/" install
}
