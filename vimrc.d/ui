"---------------------------------------------------------------------"
" File:   .vim/vimrc.d/ui                                             "
" Author: Abd√≥ Roig-Maranges <abdo.roig@gmail.com                     "
" Desc:   vim configuration                                           "
"---------------------------------------------------------------------"


" General options
" --------------------
colors abdo                       " default color scheme
set background=dark               " dark background

syntax on                         " Enable syntax highlighting
set hlsearch                      " Highlight searches
set wildmenu                      " Better autocompletion
set showmatch                     " match parenthesis


" Status line
" --------------------
if $TERM != "linux"
    let g:airline_powerline_fonts = 1
endif
"let g:airline_theme = "murmur"
let g:airline_theme = "abdo"

let g:airline#extensions#default#layout = [
    \ [ 'a', 'b', 'c' ],
    \ [ 'x', 'y', 'z' ]
    \ ]


set showcmd                       " show partial command
set laststatus=2                  " always display status line

"set ruler                         " show cursor position

"set statusline=%<\ %{mode()}\ >\ %f\ >\ %y%=
"set statusline+=<\ %l:%-2c\ %P\ <\ %m%r%{strlen(&fenc)?&fenc:&enc}\ %{&ff}\ 

" Usability
" --------------------
set ignorecase                    " case insensitive searches
set smartcase

" Quickly time out on keycodes, but never time out on mappings
set notimeout ttimeout ttimeoutlen=200

set backspace=indent,eol,start    " enhance backspace
set nostartofline                 " prevent some movements to go to start of line
set mouse=a

